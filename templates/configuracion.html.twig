{% extends 'layout.html.twig' %}

{% block estilos %}
    {{parent()}}
    <link rel="stylesheet" href="templates/styles/configuracion.css">
{% endblock %}

{% block contenido %}

<div class="contenido">
    <div class="panel-conf">
        <h1>Configuración</h1>
        <form class="form-conf" action="#">
            <h2>Información del hospital</h2>
            <div class="label-input">
                <label>Título: </label>
                <input class="inputf" type="text" value={{titulo}}>
            </div>
            <div class="label-input">
                <label>Mail de contacto:</label>
                <input class="inputf" type="text" value={{mail}}>
            </div>
            <div class="label-input">
                <label>Descripción:</label>
                <textarea class="inputf" cols="21" rows="5">{{desc}}</textarea>
            </div>
            <h2>Configuración del sitio</h2>
            <div class="label-input">
                <label>Cantidad de elementos por página:</label>
                <select class="inputf">
                    {% for i in 1..10 %}
                      <option value={{i}} {% if i == cantElementos %} selected {% endif %} >{{i}}</option>  
                    {% endfor %}
                </select>
            </div>
            <div class="label-input">
                <label>Sitio web deshabilitado:</label>
                <input class="inputf checkb" {% if deshabilitado %} checked {% endif %}type="checkbox">
            </div>
        </form>
        <button class="boton-guardar">Guardar cambios</button>
    </div>
</div>

{% endblock %}