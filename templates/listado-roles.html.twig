{% extends "layout.html.twig" %}
{% block estilos %}
    {{parent()}}
    <link rel="stylesheet" href="templates/styles/busqueda-usuarios.css">
    <link rel="stylesheet" href="templates/styles/busqueda-pacientes.css">
{% endblock %}
{% block contenido %}

    <div class="contenido">
        <div class="panel-principal">
            <h1>Roles</h1>
            <div class="tabla-resultados">
                
                {% for rol in roles %}
                    <a href="index.php?comando=info-rol&id={{rol.id}}">{{rol.nombre}}</a>
                {% endfor %}

                <button class="boton-panel-principal" onclick="location.href='index.php?comando=crear-rol'">Crear nuevo rol</button>
                
            </div>
        </div>
    </div>

{% endblock %}