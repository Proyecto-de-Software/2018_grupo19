{% extends 'layout.html.twig' %}

{% block contenido %}

<div class="contenido">
    <div class="panel-principal">
        <h1>{{paciente.nombre}} {{ paciente.apellido }}</h1>
        <p><strong>Fecha de nac.:</strong> {{paciente.fecha_nac}}</p>
        <p><strong>Lugar de nac.:</strong> {{paciente.lugar_nac}}</p>
        <p><strong>Partido:</strong> {{paciente.nombre_partido}}</p> {# debe crearse la key. Este valor se recupera de la región sanitaria #}
        <p><strong>Region sanitaria:</strong> {{paciente.region_sanitaria_id}}</p> {# reemplazar clave foranea por valor correspondiente #}
        <p><strong>Localidad:</strong> {{paciente.localidad_id}}</p> {# reemplazar clave foranea por valor correspondiente #}
        <p><strong>Domicilio:</strong> {{paciente.domicilio}}</p>
        <p><strong>Genero:</strong> {{paciente.genero_id}}</p> {# reemplazar clave foranea por valor correspondiente #}
        <p><strong>Posee documento:</strong> {{paciente.tiene_documento}}</p> {# reemplazar clave foranea por valor correspondiente #}
        <p><strong>Tipo de doc.:</strong> {{paciente.tipo_doc_id}}</p> {# reemplazar clave foranea por valor correspondiente #}
        <p><strong>Número de doc.:</strong> {{paciente.numero}}</p>
        <p><strong>Número de historia clínica:</strong> {{paciente.nro_historia_clinica}}</p>
        <p><strong>Número de carpeta:</strong> {{paciente.nro_carpeta}}</p>
        <p><strong>Telefono:</strong> {{paciente.tel}}</p>
        <p><strong>Obra social:</strong> {{paciente.obra_social_id}}</p> {# debe modificarse la key #}
        

    <div class="botones">
    <button class="boton-panel-principal" onclick="#" >Editar Paciente</button>
    <button class="boton-panel-principal" onclick="#">Borrar Paciente</button>
    </div>
    </div>
</div>

{% endblock  %}