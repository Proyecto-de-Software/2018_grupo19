{% extends 'layout.html.twig' %}

{% block contenido %}

<div class="contenido">
    <div class="panel-principal">
        <h1>{{usuario.first_name}} {{ usuario.last_name }}</h1>
        <p><strong>Email:</strong> {{usuario.email}}</p>
        <p><strong>Estado:</strong> {% if usuario.activo == 1 %}Activo{% else %}Bloqueado{% endif %}</p>
        <h2>Roles</h2>
        {% for rol in roles %}
            <p>{{rol.nombre}}</p>
        {% endfor %}
    <div class="botones">
    <button class="boton-panel-principal" onclick="location.href='index.php?comando=edicion-usuario&id={{usuario.id}}'" >Editar usuario</button>
    <button class="boton-panel-principal" onclick="location.href='index.php?comando=borrar-usuario&id={{usuario.id}}' ">Borrar usuario</button>
    </div>
    </div>
</div>

{% endblock  %}
